{
    "name": "sanpi/spore",
    "description": "Quickly create your next awesome PHP project based on silex, pomm, atoum and behat",
    "keywords": ["silex", "pomm", "atoum", "behat", "skeleton"],
    "license": "MIT",
    "require": {
        "silex/silex": "*",
        "pomm/pomm-service-provider": "*@dev",
        "symfony/yaml": "~2.6",
        "incenteev/composer-parameter-handler": "~2.1"
    },
    "require-dev": {
        "atoum/atoum": "~1.0",
        "behatch/contexts": "~2.0",
        "behat/mink-extension": "~2.0",
        "behat/mink-goutte-driver": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Test\\": "tests" },
        "files": ["tests/Features/bootstrap/FeatureContext.php"]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "src/config/parameters.yml"
        }
    }
}
